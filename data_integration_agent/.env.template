# =============================================================================
# Data Integration Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env files with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Google Cloud Project Configuration
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=global

# Use Vertex AI for Gemini (recommended for production)
GOOGLE_GENAI_USE_VERTEXAI=TRUE

# -----------------------------------------------------------------------------
# BigQuery Configuration
# -----------------------------------------------------------------------------
# Project containing BigQuery datasets (usually same as GOOGLE_CLOUD_PROJECT)
BQ_PROJECT_ID=your-gcp-project-id

# Source dataset - where source data is loaded
BQ_DATASET_SOURCE=commercial_lending_source

# Target dataset - where transformed data will be written
BQ_DATASET_TARGET=commercial_lending_target

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Gemini model to use for agents
GEMINI_MODEL=gemini-3-pro-preview

# -----------------------------------------------------------------------------
# Audit Logging Configuration
# -----------------------------------------------------------------------------
# Directory for audit log files (default: ./logs)
AUDIT_LOG_DIR=./logs

# -----------------------------------------------------------------------------
# Optional: Local Development with Service Account Key
# -----------------------------------------------------------------------------
# Only needed for local development. Cloud Run uses Workload Identity.
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
